<% html_title "New Budget Item" %>

<h2>New Budget Item</h2>

<%= labelled_form_for @item, url: project_budget_items_path(@project), html: { id: 'budget-item-form' } do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <p>
    <%= submit_tag 'Create', name: nil %>
    <%= link_to 'Cancel', project_budget_path(@project, @item.budget_id) if @item.budget_id %>
    <%= link_to 'Cancel', project_budgets_path(@project) unless @item.budget_id %>
  </p>
<% end %> 