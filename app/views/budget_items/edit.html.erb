<% html_title "Edit Budget Item - #{@item.name}" %>

<h2>Edit Budget Item: <%= @item.name %></h2>

<%= labelled_form_for @item, url: project_budget_item_path(@project, @item), html: { method: :put, id: 'budget-item-form' } do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <p>
    <%= submit_tag 'Update', name: nil %>
    <%= link_to 'Cancel', project_budget_path(@project, @item.budget) %>
  </p>
<% end %> 